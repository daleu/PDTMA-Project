<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/event_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="MissingConstraints"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:layout_width="390dp"
            android:layout_height="140dp">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:id="@+id/todoHeader"
                      android:orientation="horizontal" tools:ignore="UselessParent">
            <TextView
                    android:layout_width="370dp"
                    android:layout_height="30dp"
                    android:text="@string/to_o_list"
                    android:id="@+id/eventItem"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    app:fontFamily="sans-serif" android:layout_marginStart="10dp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_below="@id/todoHeader"
                android:layout_width="match_parent" android:layout_height="90dp" android:orientation="vertical">

            <LinearLayout android:layout_weight="50"
                          android:orientation="horizontal"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent">
                <TextView
                        android:layout_marginLeft="10dp"
                        android:text="@string/begin"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/begin"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout android:layout_weight="50" android:layout_width="match_parent" android:layout_height="match_parent">
                <TextView
                        android:layout_marginLeft="10dp"
                        android:text="End:"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/end"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:layout_width="0dp"
                        android:textSize="20dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>